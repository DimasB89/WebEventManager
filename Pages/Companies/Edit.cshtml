@page
@model WebEventManager.Pages.Companies.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Osavytja Info</h1>

<h4>Osavytja Info</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Company.CompanyID" />
           
            <div class="form-group">
                <label asp-for="Company.Name" class="control-label"></label>
                <input asp-for="Company.Name" class="form-control" />
                <span asp-validation-for="Company.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.RegistryNumber" class="control-label"></label>
                <input asp-for="Company.RegistryNumber" class="form-control" />
                <span asp-validation-for="Company.RegistryNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.NumberOfParticipants" class="control-label"></label>
                <input asp-for="Company.NumberOfParticipants" class="form-control" />
                <span asp-validation-for="Company.NumberOfParticipants" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Attendance.AttendanceID" />
            <input type="hidden" asp-for="Attendance.EventID" id="EventID" />
            <input type="hidden" asp-for="Attendance.ParticipantID" />
            <div class="form-group">
                <label asp-for="Attendance.PaymentMethod" class="control-label"></label>
                <select asp-for="Attendance.PaymentMethod" class="form-control">
                    <option value="CreditCard">Credit Card</option>
                    <option value="Cash">Cash</option>
                </select>
                <span asp-validation-for="Attendance.PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.AdditionalInformation" class="control-label"></label>
                <input asp-for="Attendance.AdditionalInformation" class="form-control" />
                <span asp-validation-for="Attendance.AdditionalInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvesta" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Events/Details" asp-route-id="@Model.Attendance.EventID">Tagasi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
