@page
@model WebEventManager.Pages.Companies.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].RegistryNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].NumberOfParticipants)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company[0].Participant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Company) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistryNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfParticipants)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Participant.ParticipantID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CompanyID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CompanyID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CompanyID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
