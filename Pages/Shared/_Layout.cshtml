<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web Event Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebEventManager.styles.css" asp-append-version="true" />
    
    <script>
        window.onload = function () {
            var currentPage = window.location.pathname;
            var links = [
                { id: "navLink1", href: "/" },
                { id: "navLink2", href: "/Events/Create" }
            ];

            links.forEach(function (link) {
                var linkElement = document.getElementById(link.id);
                if (currentPage === link.href) {
                    linkElement.style.backgroundColor = "#1f59a0";
                    linkElement.style.color = "white";
                }
            });
        }
    </script>
</head>
<body>
    <div class="container">
    <header style="margin-top: 10px;margin-bottom: 30px;height: 84px;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container" >
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="~/images/logo.svg" alt="" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" style="height: 84px;">
                    <ul class="navbar-nav flex-grow-1" >
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-page="/Index" id="navLink1" style="height: 84px;padding-top: 29px;text-align: center;font-size: 17px;width: 107px;">AVALEHT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link " asp-area="" asp-page="/Events/Create" id="navLink2" style="height: 84px;padding-top: 29px;text-align: center;font-size: 17px;width: 168px;">ÜRITUSE LISAMINE</a>
                        </li>
                    </ul>
                </div>
                <img class="symbol-img" src="~/images/symbol.svg" alt="" />
            </div>
        </nav>
    </header>

    <div class="container" style="width: 100%">
        <main role="main" class="pb-3" style="width:100%">
            @RenderBody()
        </main>
    </div>
    
    <footer class="custom-footer-color" style="margin-bottom: 10px;">
